{
    "compilerOptions": {
        "strict": false,
        "strictNullChecks": false,
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "lib": ["ESNext"],
        "target": "ESNext",
        "strictFunctionTypes": true,
        "checkJs": true,
        "esModuleInterop": true,
        "baseUrl": "src",
        "rootDir": "./src",
        "outDir": "./dist",
        "declaration": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noEmitOnError": true,
        "skipDefaultLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "rewriteRelativeImportExtensions": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "./dist/**/*",
    ],
    "compileOnSave": true,
    "include": [
        "**/src/"
    ]
}